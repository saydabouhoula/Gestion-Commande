{% extends 'baseBackOffice.html.twig' %}


{% block title %}
    Gestion des commande
{% endblock %}


{% block body %}

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-rose card-header-icon">
                            <div class="card-icon">
                                <i class="material-icons">assignment</i>
                            </div>
                            <h4 class="card-title">Modifier le status du commande</h4>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-2">ID Commande</dt>
                                <dd class="col-sm-10">{{ commande.id }}</dd>
                                <dt class="col-sm-2">Client</dt>
                                <dd class="col-sm-10">{{ commande.user.prenom ~ ' ' ~ commande.user.nom }}</dd>
                                <dt class="col-sm-2">Date de creation</dt>
                                <dd class="col-sm-10">{{ commande.datecreation|date('d/m/Y') }}</dd>
                                <dt class="col-sm-2">Status</dt>
                                {{ form_start(form) }}
                                <dd class="col-sm-10">{{ form_widget(form.status) }}</dd>
                                {{ form_end(form) }}


                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
