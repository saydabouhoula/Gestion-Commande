{% extends 'baseFrontOffice.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 mx-auto">
                {% for msg in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ msg }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                {% endfor %}
                <h4>Make Payment of {{ totalAmount }} TND</h4>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Name on Card') }}
                    {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    <div class="text-danger">{{ form_errors(form.name) }}</div>
                </div>
                <div class="form-group">
                    {{ form_label(form.cardNumber, 'Card Number') }}
                    {{ form_widget(form.cardNumber, { 'attr': {'class': 'form-control'} }) }}
                    <div class="text-danger">{{ form_errors(form.cardNumber) }}</div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_label(form.expMonth, 'Expiration Month') }}
                        {{ form_widget(form.expMonth, { 'attr': {'class': 'form-control'} }) }}
                        <div class="text-danger">{{ form_errors(form.expMonth) }}</div>
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form.expYear, 'Expiration Year') }}
                        {{ form_widget(form.expYear, { 'attr': {'class': 'form-control'} }) }}
                        <div class="text-danger">{{ form_errors(form.expYear) }}</div>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.cvc, 'CVC') }}
                    {{ form_widget(form.cvc, { 'attr': {'class': 'form-control'} }) }}
                    <div class="text-danger">{{ form_errors(form.cvc) }}</div>
                </div>
                {{ form_widget(form.stripeToken) }}
                <button type="submit" class="btn btn-primary btn-block">Pay Now</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
